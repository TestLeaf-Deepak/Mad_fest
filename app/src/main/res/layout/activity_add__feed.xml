<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context="com.example.pratheesh.madfest_sample.Add_Feed"


    >


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:context="com.example.pratheesh.madfest_sample.madfext_Toolbar"
        android:background="#607D8B"
        android:id="@+id/add_feed_toolbar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Feed"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:id="@+id/toolbar_textview"
            />



    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_below="@+id/add_feed_toolbar"


            >

        <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:inputType="textMultiLine"
                android:hint="Enter the feed "
                android:id="@+id/addfeed_edittext"
                android:layout_marginBottom="-20dp"
                android:gravity="top"
            android:theme="@style/Color1SwitchStyle"

            />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="-10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:maxHeight="?android:attr/listPreferredItemHeight"
                    android:maxWidth="?android:attr/listPreferredItemHeight"
                    android:scaleType="centerCrop"
                    android:id="@+id/addfeed_image"


                    />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Click Here to Browse Image"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/addfeed_browse"/>

            </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:text="Add Feed"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/addfeed_add"
            android:layout_margin="10dp"
            />


        </LinearLayout>



</RelativeLayout>
