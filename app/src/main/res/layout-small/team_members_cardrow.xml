<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.example.pratheesh.madfest_sample.Games_chennai">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <com.example.pratheesh.madfest_sample.CircularNetworkImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/team_members_image"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unstoppables"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/team_members_name"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>




    </LinearLayout>

</android.support.v7.widget.CardView>
