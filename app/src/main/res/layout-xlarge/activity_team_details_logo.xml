<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pratheesh.madfest_sample.Team_details_logo">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:weightSum="10">

    <com.example.pratheesh.madfest_sample.FeedImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/images"
        android:id="@+id/teamdetails_image"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Team Name"
               android:layout_marginTop="10dp"
               android:id="@+id/teamdetails_teamname"
               android:textSize="20dp"
               android:layout_marginLeft="20dp"
               android:textStyle="bold"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Team Name"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:id="@+id/teamdetails_teamname_value"

               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Team Motto"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:id="@+id/teamdetails_teammotto"
               android:textSize="20dp"
               android:textStyle="bold"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Team Name"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:id="@+id/teamdetails_teammotto_value"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Team Captain"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"
               android:id="@+id/teamdetails_teamcaptain"
               android:textSize="20dp"
               android:textStyle="bold"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Team Name"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"
               android:id="@+id/teamdetails_teamcaptain_value"
               />

       </LinearLayout>


   </ScrollView>

</RelativeLayout>
